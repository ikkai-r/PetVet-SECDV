rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Prevent users from modifying their own role
      allow update: if request.auth != null && 
                       request.auth.uid == userId && 
                       !('role' in request.resource.data) ||
                       request.resource.data.role == resource.data.role;
    }
    
    // Security: Login attempts - allow authenticated users to write, admin read all
    match /loginAttempts/{attemptId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Allow users to record their own failed attempts
      allow update, delete: if false; // No updates or deletes allowed
    }
    
    // Security: Account lockouts - allow authenticated users to manage their lockouts, admin read/delete
    match /accountLockouts/{email} {
      allow read: if isAdmin() || (request.auth != null && request.auth.token.email.lower() == email);
      allow create, update: if request.auth != null; // Allow users to lock their own accounts
      allow delete: if isAdmin(); // Admins can unlock accounts
    }
    
    // Users can only access their own pets
    match /pets/{petId} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.owner_id;
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.owner_id;
    }
    
    // Users can only access medical records for their own pets
    match /medical_records/{recordId} {
      allow read, write: if request.auth != null && 
                            exists(/databases/$(database)/documents/pets/$(resource.data.pet_id)) &&
                            get(/databases/$(database)/documents/pets/$(resource.data.pet_id)).data.owner_id == request.auth.uid;
      allow create: if request.auth != null && 
                       exists(/databases/$(database)/documents/pets/$(request.resource.data.pet_id)) &&
                       get(/databases/$(database)/documents/pets/$(request.resource.data.pet_id)).data.owner_id == request.auth.uid;
    }
    
    // Users can only access vaccination records for their own pets
    match /vaccination_records/{recordId} {
      allow read, write: if request.auth != null && 
                            exists(/databases/$(database)/documents/pets/$(resource.data.pet_id)) &&
                            get(/databases/$(database)/documents/pets/$(resource.data.pet_id)).data.owner_id == request.auth.uid;
      allow create: if request.auth != null && 
                       exists(/databases/$(database)/documents/pets/$(request.resource.data.pet_id)) &&
                       get(/databases/$(database)/documents/pets/$(request.resource.data.pet_id)).data.owner_id == request.auth.uid;
    }
    
    // Users can only access their own appointments
    match /schedules/{appointmentId} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
    }
    
    // Vet clinics are read-only for all authenticated users
    match /vet_clinics/{clinicId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can modify clinics
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}